<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/bacc"
            app:tint="@color/inverse"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textAlignment="center"

            android:layout_below="@id/bacc"
            android:id="@+id/about_header"
            android:textSize="40sp"
            android:textStyle="bold"/>


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/img_about"
        android:layout_below="@id/about_header"
         android:src="@drawable/loader_vv2"
        tools:ignore="MissingClass" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meet the team"
        android:id="@+id/meet"
        android:layout_below="@id/img_about"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namesLayout"
        android:orientation="vertical"
        android:layout_below="@id/meet"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parth Passi"
            android:id="@+id/name1"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shivain Singh"
            android:id="@+id/name2"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kshitiz Saxena"
            android:id="@+id/name3"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aditya Sharma"
            android:id="@+id/name4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aryaman Gupta"
            android:id="@+id/name5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dishita Chaudhary"
            android:id="@+id/name6"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact us at:"
        android:id="@+id/contact"
        android:layout_below="@id/namesLayout"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singhshivain4@gmail.com"
        android:id="@+id/details_email"
        android:layout_below="@id/contact"
        android:textSize="15sp"
        android:textAlignment="center" />


</RelativeLayout>